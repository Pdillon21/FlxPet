<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"


    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#80CACACA"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="5dp">


            <ImageView
                android:id="@+id/pet_rv_cell_imageview"
                android:layout_width="100dp"
                android:layout_height="100dp" />


            <TextView
                android:id="@+id/pet_rv_cell_textview_name"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="1dp"
                android:layout_toEndOf="@+id/pet_rv_cell_imageview"
                android:background="#000000"
                android:fontFamily="sans-serif-condensed"
                android:gravity="start"
                android:padding="10dp"
                android:text="Un Nombre de Mascota"
                android:textColor="#fff"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_alignTop="@+id/pet_rv_cell_textview_name"
                android:layout_alignEnd="@+id/pet_rv_cell_textview_name"
                android:layout_alignBottom="@+id/pet_rv_cell_textview_name"
                android:src="@drawable/arrow_right_bold" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>