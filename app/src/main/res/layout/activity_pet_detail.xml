<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".view.PetDetailActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">


        <FrameLayout
            android:id="@+id/activity_pet_detail_container1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"



            >

        </FrameLayout>


        <TextView
            android:id="@+id/activity_pet_detail_switcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text="fragment switcher (Hold to change)"
            android:textSize="16sp" />


        <FrameLayout
            android:id="@+id/activity_pet_detail_container2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


        </FrameLayout>


    </LinearLayout>


</ScrollView>